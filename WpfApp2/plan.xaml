<Window x:Class="WpfApp2.plan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="plan" Height="565" Width="645">
    <Grid Background="#FF218C46">
        <DataGrid AutoGenerateColumns="False" x:Name="fidpla" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Планограмма">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Width="700" Height="800" Stretch="Uniform" Source ="{Binding Фото}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
